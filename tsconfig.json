{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}